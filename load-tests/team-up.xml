  <servers>
    <server host="ec2-52-34-163-97.us-west-2.compute.amazonaws.com" port="80" type="tcp"></server>
  </servers>


  <load>
    <arrivalphase phase="1" duration="30" unit="second">
      <users arrivalrate="1" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="2" duration="30" unit="second">
      <users arrivalrate="2" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="3" duration="30" unit="second">
      <users arrivalrate="4" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="4" duration="30" unit="second">
     <users arrivalrate="8" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="5" duration="30" unit="second">
     <users arrivalrate="16" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="6" duration="30" unit="second">
     <users arrivalrate="32" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="7" duration="30" unit="second">
     <users arrivalrate="64" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="8" duration="30" unit="second">
     <users arrivalrate="128" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="9" duration="30" unit="second">
     <users arrivalrate="256" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="10" duration="30" unit="second">
     <users arrivalrate="512" unit="second"></users>
    </arrivalphase>
  </load>

  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="global_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <!-- ================================================= -->
    <!--                      SESSION                      -->
    <!--                   edit profile                    -->
    <!-- ================================================= -->
    <!-- 1. signin -->
    <!-- 2. update forfile -->
    <!-- 3. log out -->
    <!-- ================================================= -->

    <!-- User signin and update profile -->
    <session name="user_editprofile" weight="50" type="ts_http">

      <!-- start out at the dashboard. -->
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds, user is looking at posts -->
      <thinktime value="2" random="true"></thinktime>

      <setdynvars sourcetype="random_number" start="100000000" end="200000000">
        <var name="random_user_id" />
      </setdynvars>

      <setdynvars sourcetype="random_number" start="200000000" end="300000000">
        <var name="random_user_id_update" />
      </setdynvars>

      <setdynvars sourcetype="random_number" start="1" end="4">
        <var name="random_year"/>
      </setdynvars>

      <!-- signin -->
      <!-- Sign Up -->
      <request subst="true">
        <http
          url='/users'
          version='1.1'
          method='POST'
          contents='user%5bemail%5d=user%%_random_user_id%%%40gmail%2Ecom&amp;user%5bpassword%5d=88888888&amp;user%5bpassword_confirmation%5d=88888888&amp;user%5bfirst_name%5d=user%%_random_user_id%%&amp;user%5bsid%5d=%%_random_user_id%%&amp;user%5bmajor%5d=Computer+Science&amp;user%5byear%5d=%%_random_year%%&amp;commit=Sign+up'>
        </http>
      </request>

      <thinktime value="15" random="true"></thinktime>

      <!-- view notification -->
      <request>
        <http url='/notifications' version='1.1' method='GET'></http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <!-- view message -->
      <request>
        <http url='/mailbox/inbox' version='1.1' method='GET'></http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <!-- edit profile: get form-->
      <request>
        <http url='/users/edit' version='1.1' method='GET'></http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <request subst="true">
        <http
          url='/users'
          version='1.1'
          method='POST'
          contents='user%5Bemail%5D=useremail%%_random_user_id_update%%%40email.com&amp;user%5Bfirst_name%5D=userfirst%%_random_user_id_update%%&amp;user%5Blast_name%5D=userlast%%_random_user_id_update%%&amp;user%5Bgithub%5D=usergithub%%_random_user_id_update%%&amp;user%5Bsid%5D=%%_random_user_id_update%%&amp;user%5Bmajor%5D=usermajor%%_random_user_id_update%%&amp;user%5Bpassword%5D=&amp;user%5Bpassword_confirmation%5D=&amp;user%5Bcurrent_password%5D=88888888&amp;commit=Update'></http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <request>
        <http url='/users/sign_out' version='1.1' method='DELETE'></http>
      </request>

    </session>

    <!-- ================================================= -->
    <!--                      SESSION                      -->
    <!--                    create course                  -->
    <!-- ================================================= -->
    <!-- 1. sign up user -->
    <!-- 2. create course -->
    <!-- 3. join created course -->
    <!-- 4. create team -->
    <!-- 5. invite people -->
