    <session name="user_create_course" type="ts_http" weight="100">

      <!-- start out at the dashboard. -->
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>

      <request>
          <http url="/users/sign_up" version="1.1" method="GET"></http>
      </request>

      <setdynvars sourcetype="random_number" start="1" end="4">
        <var name="random_year"/>
      </setdynvars>

      <setdynvars sourcetype="random_number" start="400000000" end="500000000">
        <var name="random_user" />
      </setdynvars>

      <!-- Sign Up -->
      <request subst="true">
        <dyn_variable name="user_id" re="[Ll]ocation: http://.*/(.*)\r"/>
