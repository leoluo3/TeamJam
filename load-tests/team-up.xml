          url='/users'
          version='1.1'
          method='POST'
          contents='user%5bemail%5d=user%%_random_user%%%40gmail%2Ecom&amp;user%5bpassword%5d=88888888&amp;user%5bpassword_confirmation%5d=88888888&amp;user%5bfirst_name%5d=user%%_random_user%%&amp;user%5bsid%5d=%%_random_user%%&amp;user%5bmajor%5d=Computer+Science&amp;user%5byear%5d=%%_random_year%%&amp;commit=Sign+up'>
