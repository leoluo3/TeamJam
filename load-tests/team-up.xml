          <http url='/join_classes/join_courses' version='1.1' method='POST' contents='all_courses%5B1%5D=%%_first_available_course%%&amp;commit=Join+Courses'></http>
        </request> -->

        <!-- Go to the course page, get create team page -->
        <!-- <request subst="true">
          <http url='/courses/%%_first_available_course%%/teams/new' version='1.1' method='GET'></http>
        </request> -->

        <!-- Create a new team -->
        <!-- <request subst="true">
          <http url='/courses/%%_first_available_course%%/teams' version='1.1' method='POST' contents='team%5Bname%5D=team%%_random_user%%&amp;team%5Bdescription%5D=Team+created+by+user%%_random_user%%&amp;team%5Bpasscode%5D=88888888&amp;commit=Create+Team'></http>
        </request>

        <thinktime value="2" random="true"></thinktime> -->

        <!-- Go back to course page, get a random classmates -->
        <!-- <request subst="true">
          <dyn_variable name="invite_url" re='href=\"/users/invite\?(.*)\"&lt;\r'/>
          <http url='/courses/%%_first_available_course%%' version='1.1' method='GET'></http>
        </request> -->

      <!-- end of if   -->
      <!-- </if> -->

      <thinktime value="2" random="true"></thinktime>

      <!-- Sign out -->
      <request>
        <http url='/users/sign_out' version='1.1' method='DELETE'></http>
      </request>

    </session>

    <!-- ================================================= -->
    <!--                      SESSION                      -->
    <!--                    user_joincourse                -->
    <!-- ================================================= -->
    <!-- 1. signin -->
    <!-- 2. view courses -->
    <!-- 3. join course -->
    <!-- 4. sort student in course -->
    <!-- 5. create team -->
    <!-- 6. invite student -->
    <!-- 7. log out -->
    <!-- ================================================= -->

    <session name="user_joincourse" weight="50" type="ts_http">

      <!-- start out at the dashboard. -->
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds, user is looking at posts -->
      <thinktime value="2" random="true"></thinktime>

      <setdynvars sourcetype="random_number" start="300000000" end="400000000">
        <var name="random_user_id" />
      </setdynvars>

      <setdynvars sourcetype="random_number" start="1" end="4">
        <var name="random_year"/>
      </setdynvars>

      <!-- signin -->
      <!-- Sign Up -->
      <request subst="true">
        <http
          url='/users'
          version='1.1'
          method='POST'
          contents='user%5bemail%5d=user%%_random_user_id%%%40gmail%2Ecom&amp;user%5bpassword%5d=88888888&amp;user%5bpassword_confirmation%5d=88888888&amp;user%5bfirst_name%5d=user%%_random_user_id%%&amp;user%5bsid%5d=%%_random_user_id%%&amp;user%5bmajor%5d=Computer+Science&amp;user%5byear%5d=%%_random_year%%&amp;commit=Sign+up'>
        </http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <setdynvars sourcetype="random_number" start="1" end="15">
        <var name="random_courseid" />
      </setdynvars>

      <!-- Get a list of available courses -->
      <request>
        <http url='/join_classes/index' version='1.1' method='GET'></http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <if var="random_courseid" neq="">

        <request subst="true">
          <http url='/courses/%%_random_courseid%%' version='1.1' method='GET'></http>
        </request>

        <thinktime value="2" random="true"></thinktime>

        <!-- join course-->
        <request subst="true">
          <http url='/courses/%%_random_courseid%%/join' version='1.1' method='POST' contents='_method=post'></http>
        </request>

        <thinktime value="2" random="true"></thinktime>

        <request subst="true">
          <dyn_variable name="order_skill_id" re='class=\"btn btn-sm btn-default\" href=\"/courses/%%_random_courseid%%?order_skill=(.*)\"'/>
          <dyn_variable name="order_skill_id2" re='&lt;a class=\"btn btn-sm btn-default\" href=\"/courses/%%_random_courseid%%?order_skill=(.*)\"&gt;.*&lt;/a&gt;&lt;br&gt;&lt;br&gt;&lt;br&gt;'/>
          <http url='/courses/%%_random_courseid%%' version='1.1' method='GET'/>
        </request>

        <thinktime value="2" random="true"></thinktime>

        <request subst="true">
          <http url='/courses/%%_random_courseid%%?order_skill=%%_order_skill_id%%' version='1.1' method='GET'></http>
        </request>

        <thinktime value="2" random="true"></thinktime>

        <request subst="true">
          <http url='/courses/%%_random_courseid%%?order_skill=%%_order_skill_id2%%' version='1.1' method='GET'></http>
        </request>

        <thinktime value="2" random="true"></thinktime>

        <request subst="true">
          <http url='/courses/%%_random_courseid%%/teams' version='1.1' method='POST' contents='team%5Bname%5D=team%%_random_user_id%%&amp;team%5Bdescription%5D=Team+created+by+user%%_random_user_id%%+for+course%%_random_courseid%%&amp;team%5Bpasscode%5D=88888888&amp;commit=Create+Team'></http>
        </request>

        <request subst="true">
          <dyn_variable name="create_team_number" re='&lt;li&gt;&lt;a href=\"/courses/.*\"&gt;.*&lt;/a&gt;\s*&lt;ul&gt;\s*&lt;li&gt;&lt;a href=\"/teams/(.*)\"&gt;.*&lt;/a&gt;\s*&lt;/ul&gt;'/>
          <dyn_variable name="invite_user_id" re='class=\"st-name\" href=\"/users/(.*)\"'/>
          <http url='/courses/%%_random_courseid%%' version='1.1' method='GET'/>
        </request>

        <if var="create_team_number" neq="">
          <if var="invite_user_id" neq="">
            <transaction name="invite">
              <request subst="true">
                <http url='/users/invite?id=%%_invite_user_id%%&amp;team_id=%%_create_team_number%%' version='1.1' method='POST'></http>
              </request>
            </transaction>
          </if>
        </if>
      </if>


      <request>
        <http url='/users/sign_out' version='1.1' method='DELETE'></http>
      </request>

    </session>
  </sessions>
</tsung>
