  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="global_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <!-- ================================================= -->
    <!--                      SESSION                      -->
    <!--                    login-logout                   -->
    <!-- ================================================= -->
    <!-- 1. set up current user randomly -->
    <!-- 2. login -->
    <!-- 3. log out -->
    <!-- ================================================= -->
    <session name="loadtest" type="ts_http" probability="100">

      <!-- start out at the dashboard. -->
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>

      <request>
          <http url="/users/sign_up" version="1.1" method="GET"></http>
      </request>

      <setdynvars sourcetype="random_number" start="1" end="4">
        <var name="random_year"/>
      </setdynvars>

      <setdynvars sourcetype="random_number" start="1000" end="9999999">
        <var name="random_user" />
      </setdynvars>

      <!-- Sign Up -->
      <request subst="true">
        <http
          url='/users'
          version='1.1'
          method='POST'
          contents='user%5bemail%5d=user%%_random_user%%%40gmail%2Ecom&amp;user%5bpassword%5d=88888888&amp;user%5bpassword_confirmation%5d=88888888&amp;user%5bfirst_name%5d=user%%_random_user%%&amp;user%5bsid%5d=%%_random_user%%&amp;user%5bmajor%5d=Computer+Science&amp;user%5byear%5d=%%_random_year%%&amp;commit=Sign+up'>
        </http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <!-- create course -->
      <!-- go to create course page -->
      <request>
        <http url='/courses/new' version='1.1' method='GET'></http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <setdynvars sourcetype="random_number" start="100" end="500">
        <var name="random_create_course" />
      </setdynvars>

      <request subst="true">
        <dyn_variable name="created_course_id" re="[Ll]ocation: http://.*/(.*)\r"/>
        <http url='/courses' version='1.1' method='POST' contents='course%5Bname%5D=test+course+%%_random_create_course%%&amp;course%5Bdescription%5D=description&amp;course%5Bmax_members%5D=5&amp;course%5Bmin_time_commitment%5D=2&amp;course%5Bstart_date%281i%29%5D=2015&amp;course%5Bstart_date%282i%29%5D=12&amp;course%5Bstart_date%283i%29%5D=1&amp;course%5Bend_date%281i%29%5D=2015&amp;course%5Bend_date%282i%29%5D=12&amp;course%5Bend_date%283i%29%5D=1&amp;skillset%5B1%5D=0&amp;skillset%5B2%5D=0&amp;skillset%5B3%5D=0&amp;skillset%5B4%5D=0&amp;skillset%5B5%5D=0&amp;skillset%5B6%5D=0&amp;skillset%5B7%5D=0&amp;skillset%5B8%5D=0&amp;skillset%5B9%5D=0&amp;commit=Create'></http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <!-- join the created course -->
      <request subst="true">
        <http url='/courses/%%_created_course_id%%/join' version='1.1' method='POST' contents='_method=post'></http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <!-- Get a list of available courses -->
      <request>
        <dyn_variable name="first_available_course" re='input type=\"checkbox\" value=\"(.*)\" name'/>
        <http url='/join_classes/index' version='1.1' method='GET'></http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <!-- Join the first available courses -->
      <request subst="true">
        <http url='/join_classes/join_courses' version='1.1' method='POST' contents='all_courses%5B1%5D=%%_first_available_course%%&amp;commit=Join+Courses'></http>
      </request>

      <!-- Go to the course page, get create team page -->
      <request subst="true">
        <http url='/courses/%%_first_available_course%%/teams/new' version='1.1' method='GET'></http>
      </request>

      <!-- Create a new team -->
      <request subst="true">
        <http url='/courses/%%_first_available_course%%/teams' version='1.1' method='POST' contents='team%5Bname%5D=team%%_random_user%%&amp;team%5Bdescription%5D=Team+created+by+user%%_random_user%%&amp;team%5Bpasscode%5D=88888888&amp;commit=Create+Team'></http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <!-- Sign out -->
      <request>
        <http url='/users/sign_out' version='1.1' method='DELETE'></http>
      </request>

    </session>
  </sessions>
